<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="312dp"
    android:layout_height="255dp"
    android:background="@drawable/aud_dialog_background"
    >
    <LinearLayout
        android:layout_width="312dp"
        android:layout_height="255dp"
        tools:ignore="MissingConstraints"
        android:orientation="vertical"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            tools:ignore="MissingConstraints">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingHorizontal="15dp"
                android:gravity="center"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/room"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="413"
                        android:textSize="17dp"
                        android:fontFamily="@font/rubik_bold"
                        android:textColor="@color/black" />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            tools:ignore="MissingConstraints">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingHorizontal="15dp"
                android:gravity="center_vertical"
                >

                <ImageView
                    android:id="@+id/lock"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    />

                <TextView
                    android:id="@+id/info_lock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Проводиться заняття"
                    android:fontFamily="@font/rubik_bold"
                    android:textColor="@color/black"
                    android:layout_marginLeft="20dp"
                    android:textSize="14dp"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            tools:ignore="MissingConstraints">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingHorizontal="15dp"
                android:gravity="center_vertical"
                >

                <ImageView
                    android:id="@+id/clock"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/clock"/>

                <TextView
                    android:id="@+id/info_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10:20 - 15:40"
                    android:fontFamily="@font/rubik_bold"
                    android:textColor="@color/black"
                    android:layout_marginLeft="20dp"
                    android:textSize="14dp"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            tools:ignore="MissingConstraints">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingHorizontal="15dp"
                android:gravity="center_vertical"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:id="@+id/lesson"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/book_"/>

                <TextView
                    android:id="@+id/info_subject"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Математичний аналіз"
                    android:fontFamily="@font/rubik_bold"
                    android:textColor="@color/black"
                    android:layout_marginLeft="20dp"
                    android:textSize="14dp"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            tools:ignore="MissingConstraints">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingHorizontal="15dp"
                android:gravity="center_vertical"
                >

                <ImageView
                    android:id="@+id/person"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/user"/>

                <TextView
                    android:id="@+id/info_teacher"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Проводиться заняття"
                    android:fontFamily="@font/rubik_bold"
                    android:textColor="@color/black"
                    android:layout_marginLeft="20dp"
                    android:textSize="14dp"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>